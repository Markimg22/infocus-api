{
  "name": "infocus-api",
  "version": "1.0.0",
  "description": "üìù Application to help you focus on your daily activities.",
  "main": "index.js",
  "author": "Marcos Campos",
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "prisma": {
    "schema": "src/infra/schema.prisma"
  },
  "scripts": {
    "prepare": "husky install",
    "prisma:test": "dotenv -e .env.test -- prisma migrate dev",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d && dotenv -e .env.test -- npm run prisma:dev",
    "test": "dotenv -e .env.test -- jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^6.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prisma": "^3.11.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1"
  }
}
